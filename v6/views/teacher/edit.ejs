<%- include("../partials/header") %>

<h1>Edit <%= category.name %> </h1>

<div class="container">
    <form action="/teacher/classroom/<%= category._id %>?_method=PUT " method="POST">
        <div class="form-group">
            <input type="text" name="category[img]" class="form-control" value="<%= category.img %>">
        </div>
        <div class="form-group">
            <input type="text" name="category[name]" class="form-control" value="<%= category.name %>">
        </div>
        <button class="btn btn-success">Submit</button>
    </form>
    <a class="btn btn-dark" href="/teacher/classroom">Back</a>
</div>

<%- include("../partials/footer") %>