<%- include("../partials/header") %>

<div class="container">
    <h3>Settings</h3>
    <form action="/user/<%= user.id %>/settings?_method=PUT " method="POST">
       <div class="form-group">
          <label for="avatar">Profile photo</label>
          <input type="text" value="<%= user.avatar %> " id="avatar" name="userinf[avatar]" class="form-control">
       </div>
       <div class="form-group">
          <label for="name">Name</label>
          <input type="text" value="<%= user.name %>" id="name" name="userinf[name]" class="form-control">
       </div>
       <div class="form-group">
          <label for="surname">Surname</label>
          <input type="text" value="<%= user.surname %>"  id="surname" name="userinf[surname]" class="form-control">
       </div>
       <div class="form-group">
          <label for="email">e-mail</label>
          <input type="email" value="<%= user.email %>"  id="email" name="userinf[email]" class="form-control">
       </div>
       <button>Submit</button>
    </form>
    <a href="/user/<%= user.id %> ">Back</a>
</div> 

<%- include("../partials/footer") %>