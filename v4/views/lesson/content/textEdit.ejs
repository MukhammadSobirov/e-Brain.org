<%- include("../../partials/header") %>

<div class="container">
    <h1>Edit <%= text.title %> </h1>
    <form action="/lesson/<%= lesson_id %>/show/text/<%= text._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <input type="text" name="text[title]" class="form-control" value="<%= text.title %> ">
        </div>
        <div class="form-group">
            <textarea name="text[itself]"  class="form-control"><%= text.itself %> </textarea>
        </div>
        <button class="btn btn-success">Submit</button>
    </form>
</div>

<%- include("../../partials/footer") %>