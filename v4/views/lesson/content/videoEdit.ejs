<%- include("../../partials/header") %>

<div class="container">
    <h1>Edit <%= video.title %> </h1>
    <form action="/lesson/<%= lesson_id %>/show/video/<%= video._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <input type="text" name="video[title]" class="form-control" value="<%= video.title %> ">
        </div>
        <div class="form-group">
            <input type="text" name="video[link]" class="form-control" value="<%= video.link %> ">
        </div>
        <div class="form-group">
            <textarea name="video[text]"  class="form-control"><%= video.text %> </textarea>
        </div>
        <button class="btn btn-success">Submit</button>
    </form>
</div>

<%- include("../../partials/footer") %>