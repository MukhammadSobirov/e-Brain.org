<%- include("../partials/header") %>

<h1>Add new Category</h1>

<div class="container">
    <form action="/teacher/classroom" method="POST">
        <div class="form-group">
            <input type="text" name="category[img]" class="form-control" placeholder="image URL">
        </div>
        <div class="form-group">
            <input type="text" name="category[name]" class="form-control" placeholder="title">
        </div>
        <button class="btn btn-success">Submit</button>
    </form>
    <a class="btn btn-dark" href="/teacher/classroom">Back</a>
</div>

